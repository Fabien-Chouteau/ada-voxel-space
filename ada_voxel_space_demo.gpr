with "sdlada";

project Ada_Voxel_Space_Demo is

   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("main.adb");

   for Create_Missing_Dirs use "True";

   package Linker is
      for Default_Switches ("Ada") use ("-lSDL2");
  end Linker;

end Ada_Voxel_Space_Demo;
